<!DOCTYPE html>
<html>
    <head>
        <style>
            .container {
                padding: 25px;
            }

            input {
                width: 100%;
                padding: 12px;
                border: 1px solid #ccc;
                border-radius: 4px;
                box-sizing: border-box;
                margin-top: 6px;
                margin-bottom: 16px;
            }

            #message {
                display:none;
                background: #f1f1f1;
                color: #000;
                position: relative;
                padding: 20px;
                margin-top: 10px;
            }

            #message p {
                padding: 10px 35px;
                font-size: 18px;
            }

            /* Add a green text color and a checkmark when the requirements are right */
            .valid {
                color: green;
            }

            .valid:before {
                position: relative;
                left: -5px;
                content: "✔";
            }

            /* Add a red text color and an "x" when the requirements are wrong */
            .invalid {
                color: red;
            }

            .invalid:before {
                position: relative;
                left: -5px;
                content: "✖";
            }
        </style>
    </head>

    <body>
        <%- include('partials/header') -%>
        <% if (locals.user) { %>
            <h1>Your email is verified</h1>
            <p><a href="/signin" class="underline">Login now</a></p>
        <% } else { %>
            <h1>There is something wrong with verifying your email. Seek help.</h1>
        <% } %>
    </body>
</html>
